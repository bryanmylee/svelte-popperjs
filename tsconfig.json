{
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "Node",
		"emitDeclarationOnly": true,
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"tests",
		"vitest.config.ts",
		"vitest.setup.ts"
	]
}
